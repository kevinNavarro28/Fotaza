doctype html
html(lang="en")
    include ../Modulo/head.pug
    body
        include ../Modulo/Header.pug  

        div(id="content" class="container-fluid mt-3")
            section
                div(class="container p-2")
                    div(class="row")
                        div(class="col-sm-8")
                            div(class="container bg-dark")
                                div(class="row")
                                    div(class="column")
                                        if(Publicacion)
                                            for val in Publicacion
                                                a(href=`/Publicacion/showOne/${val.id}`)
                                                        div(class="user-info d-flex align-items-center")
                                                            
                                                               
                                                            if(val.Imagenes.estado == "Protegido")
                                                                img(src=`/private/${val.Imagenes.nombre}` id="myImg")
                                                            if(val.Imagenes.estado == "Publico")
                                                                img(src=`/public/${val.Imagenes.nombre}` id="myImg")
                                br

                        div(class="col-sm-4")
                            div(class="container bg-dark")
                                h5(class="p-2 align-self-center text-light")= "Destacados de la semana"
                                div(class="row")
                                    div(class="column_fav")
                                        if(Destacados)
                                            for des in Destacados
                                                a(href=`/Publicacion/showOne/${des.id}`)
                                                    if(des.Imagenes.estado == "Protegido")
                                                        img(src=`/private/${des.Imagenes.nombre}` witdh="200px" height="200px")
                                                    if(des.Imagenes.estado == "Publico")
                                                        img(src=`/public/${des.Imagenes.nombre}` witdh="200px" height="200px")
                                br